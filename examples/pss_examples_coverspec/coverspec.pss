
struct packet {
	rand unsigned int pkt_len;
	rand unsigned int target;
	
	constraint c {
		pkt_len inside {[1:1500]};
		target inside {[0:255]};
	}
}

coverspec packet_cov(packet pkt) {

	key_lengths : coverpoint pkt.pkt_len {
		bins key_lengths [1..3]:1 [4..1496]/4 [1497..1500]:1;
	}
	
	key_targets : coverpoint pkt.target {
		bins key_targets [1] [5] [7] [13];
	}
	
	key_length_target : cross key_lengths, key_targets;
}